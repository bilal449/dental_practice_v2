<section class="panel">
    <header class="panel-heading">
            My Sections
    </header>
    <div class="panel-body table-responsive">

     


<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Timeanddate</th>
      <th>Dentist</th>
      <th>Patient</th>
      <th>Appointment length</th>
      <th>Fee paid</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.timeanddate %></td>
        <td><%= appointment.dentist.name %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= appointment.appointment_length %></td>
        <td><%= appointment.fee_paid %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</section>
<br>

<%= link_to 'New Appointment', new_appointment_path %>
